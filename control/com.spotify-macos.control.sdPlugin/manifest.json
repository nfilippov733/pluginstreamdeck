{
    "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
    "UUID": "com.spotify-macos.control",
    "Name": "Spotify MacOs",
    "Version": "1.0.0",
    "Author": "Nikita Filippov",
    "Description": "Spotify Controls for Mac OS to manage playlists",
    "Category": "Spotify MacOs",
    "CategoryIcon": "imgs/category-icon",
    "Icon": "imgs/plugin-icon",
    "CodePath": "bin/plugin.js",
    "SDKVersion": 2,
    "Software": {
        "MinimumVersion": "6.6"
    },
    "OS": [
        {
            "Platform": "mac",
            "MinimumVersion": "10.15"
        }
    ],
    "Nodejs": {
        "Version": "20",
        "Debug": "enabled"
    },
    "Actions": [
        {
            "Name": "Play Playlist",
            "UUID": "com.spotify-macos.control.play-playlist",
            "Icon": "imgs/actions/playlist/icon",
            "Tooltip": "Play a Spotify playlist",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/playlist/key",
                    "TitleAlignment": "bottom"
                }
            ],
            "PropertyInspectorPath": "ui/play-playlist.html"
        },
        {
            "Name": "Play / Pause",
            "UUID": "com.spotify-macos.control.play-pause",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Toggle playback (play/pause)",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/counter/key",
                    "TitleAlignment": "middle"
                }
            ]
        },
        {
            "Name": "Next Track",
            "UUID": "com.spotify-macos.control.next-track",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Skip to the next track",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/counter/key",
                    "TitleAlignment": "middle"
                }
            ]
        },
        {
            "Name": "Previous Track",
            "UUID": "com.spotify-macos.control.previous-track",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Go to the previous track",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/counter/key",
                    "TitleAlignment": "middle"
                }
            ]
        },
        {
            "Name": "Volume Up",
            "UUID": "com.spotify-macos.control.volume-up",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Increase Spotify volume",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/counter/key",
                    "TitleAlignment": "middle"
                }
            ],
            "PropertyInspectorPath": "ui/volume-step.html"
        },
        {
            "Name": "Volume Down",
            "UUID": "com.spotify-macos.control.volume-down",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Decrease Spotify volume",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/counter/key",
                    "TitleAlignment": "middle"
                }
            ],
            "PropertyInspectorPath": "ui/volume-step.html"
        },
        {
            "Name": "Volume Preset",
            "UUID": "com.spotify-macos.control.volume-preset",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Set volume to a preset level",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/counter/key",
                    "TitleAlignment": "middle"
                }
            ],
            "PropertyInspectorPath": "ui/volume-preset.html"
        },
        {
            "Name": "Volume Dial",
            "UUID": "com.spotify-macos.control.volume-dial",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Rotate to adjust volume, press to mute/unmute",
            "Controllers": ["Encoder"],
            "Encoder": {
                "layout": "$B1",
                "TriggerDescription": {
                    "Rotate": "Adjust volume",
                    "Push": "Mute/Unmute"
                }
            }
        },
        {
            "Name": "Track Dial",
            "UUID": "com.spotify-macos.control.track-dial",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Rotate to skip tracks, press to play/pause",
            "Controllers": ["Encoder"],
            "Encoder": {
                "layout": "$B1",
                "TriggerDescription": {
                    "Rotate": "Next/Previous track",
                    "Push": "Play/Pause"
                }
            }
        },
        {
            "Name": "Seek Dial",
            "UUID": "com.spotify-macos.control.seek-dial",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Rotate to seek in track, press to restart",
            "Controllers": ["Encoder"],
            "Encoder": {
                "layout": "$B1",
                "TriggerDescription": {
                    "Rotate": "Seek forward/backward",
                    "Push": "Restart track"
                }
            }
        }
    ]
}